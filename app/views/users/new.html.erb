<nav class="navbar-expand-md navbar-dark bg-transparent d-flex flex-row">
    <div class='container-fluid'>
        <%= link_to "Task-IT", root_path, class: "navbar-brand p-0" %>
        <button class="navbar-toggler" type='button' data-toggle="collapse" data-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
    <div class='collapse navbar-collapse' id='navbarResponsive'>
        <ul class="navbar-nav ml-auto">
            <li class='nav-item'> <%= link_to "Home", root_path, class: 'nav-link'%> </li>
        </ul>
    </div>
</nav>

<div class="container vh-100 d-flex flex-column justify-content-center align-items-center text-center pb-5">

    <%= render partial: "shared/errors", locals: {instance: @form} %>

    <div class="row">
        <h3 class="display-5 mb-3 mx-auto p-3"> Sign Up to Task-IT! </h3>
    </div>
    <div class="row">
        <div class='col-12 bg-light my-auto text-center border p-4 m-3'>
            <%= form_tag users_path do %>
                <%= email_field_tag :email, nil, placeholder: "samplemail@email.com", class: 'form-control' %>
                <%= text_field_tag :nickname, nil, placeholder: "n!ckkname", class: 'form-control' %>
                <%= password_field_tag :password, nil, placeholder: "Enter your password", class: 'form-control' %>
                <%= password_field_tag :password_confirmation, nil, placeholder: "Confirm your password", class: 'form-control' %>
                <%= submit_tag :submit, class: 'btn btn-info btn-block'%>
            <% end %>
        </div>
    </div>
</div>