<div class='container vh-100 d-flex flex-column justify-content-center align-items-center text-center pb-5'>
    <%= render partial: "shared/errors", locals: {instance: @form} %>

    <div class="row bg-white">
        <h3 class="display-5 mb-4 p-3"> Sign In to Task-IT ! </h3>
    </div>
    <div class="row bg-light border justify-content-center">
        <div class="col-12 text-center p-3 m-3">
                <%= form_tag sessions_path do %>
                <%= text_field_tag :email, nil, placeholder: "Email address", class: "form-control"%>
                <%= password_field_tag :password, nil, placeholder: "Enter your password", class: "form-control"%>
                <%= submit_tag :submit, class: "btn btn-lg btn info btn-block"%>
            <% end %>
        </div>
    </div>
</div>