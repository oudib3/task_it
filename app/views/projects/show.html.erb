<div class="container-fluid d-flex flex-row vh-100 bg-dark">
    <div class="col-2 vh-100 d-flex justify-content-center align-items-center text-center my-auto">
        <%= link_to "Home", user_path(current_user), class: "btn btn-info"%>
    </div>
    <div class='tasks-container vh-100 col-10 bg-light py-5'>
        <div class="grid-pattern border-bottom d-flex flex-row mb-3">
            <div class="col-4 border-right">Title</div>
            <div class="col-3 border-right">Status</div>
            <div class="col-2 border-right">Created:</div>
            <div class="col-2">Due date</div> <br>
        </div>
        <%= link_to 'new task', new_project_task_path(@project)%>
        <% if @tasks %>
            <% @tasks.each do |task| %>
                <div class='task-card d-flex flex-row'> 
                   <p class='task-title col-4 '> <%= "#{ task.title }"  %> </p>
                   <p class='task-title col-3'> <%= "#{ task.title }"  %> </p>
                   <p class='task-title col-3'> <%= "#{ task.created_at }"  %> </p>
                   <p class='task-title col-2'> <%= "#{ task.created_at }"  %> </p>
                </div>
            <% end %>
        <% end %>
    </div>
</div>
